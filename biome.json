{
  "$schema": "https://biomejs.dev/schemas/2.3.5/schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 100,
    "attributePosition": "auto"
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "jsxQuoteStyle": "double",
      "trailingCommas": "es5",
      "semicolons": "always",
      "arrowParentheses": "always"
    }
  },
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "backend/**",
      "frontend/**",
      "!!**/node_modules/**",
      "!!**/dist/**",
      "!!**/coverage/**",
      "!!**/playwright-report/**",
      "!!**/test-results/**",
      "!!**/*.config.js",
      "!!**/*.config.mjs",
      "!!**/*.config.ts"
    ],
    "experimentalScannerIgnores": [
      "**/routeTree.gen.ts"
    ]
  },
  "overrides": [
    {
      "includes": ["backend/**"],
      "javascript": {
        "parser": {
          "unsafeParameterDecoratorsEnabled": true
        }
      },
      "linter": {
        "rules": {
          "style": {
            "useImportType": "off"
          }
        }
      }
    },
    {
      "includes": ["frontend/**"],
      "linter": {
        "rules": {
          "recommended": true,
          "correctness": {
            "useExhaustiveDependencies": "warn"
          }
        }
      }
    },
    {
      "includes": ["**/routeTree.gen.ts"],
      "linter": {
        "rules": {
          "suspicious": {
            "noExplicitAny": "off"
          }
        }
      }
    },
    {
      "includes": ["**/*.css"],
      "linter": {
        "rules": {
          "suspicious": {
            "noUnknownAtRules": "off"
          },
          "correctness": {
            "noUnknownTypeSelector": "off"
          }
        }
      }
    }
  ]
}

